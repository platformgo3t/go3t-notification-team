{
  "name": "go3t-notification-team",
  "displayName": "Go3t Notification Team",
  "version": "0.0.5",
  "icon": "resources/logo.png",
  "files": [
    "out/",
    "media/",
    "resources/",
    "node_modules/"
  ],
  "publisher": "Go3t",
  "author": {
    "name": "Edgar Javier Peña Hernandez"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/platformgo3t/go3t-notification-team.git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpsearch-sidebar",
          "title": "Go3t",
          "icon": "resources/logo.png"
        }
      ]
    },
    "views": {
      "mcpsearch-sidebar": [
        {
          "id": "mcpsearchView",
          "name": "Go3t",
          "type": "webview",
          "icon": "resources/logo.png"
        }
      ]
    },
    "configuration": {
      "title": "Go3t Notification Team",
      "properties": {
        "mcpsearch.telegram.apiId": {
          "type": "number",
          "default": 0,
          "description": "El API ID de Telegram para la sesión de usuario."
        },
        "mcpsearch.telegram.apiHash": {
          "type": "string",
          "default": "",
          "description": "El API Hash de Telegram para la sesión de usuario."
        },
        "mcpsearch.telegram.phoneNumber": {
          "type": "string",
          "default": "",
          "description": "El número de teléfono para la sesión de usuario en Telegram. ej: 535xxxxxxx"
        },
        "mcpsearch.telegram.groupId": {
          "type": "string",
          "default": "",
          "description": "El ID del grupo de Telegram donde se enviarán los mensajes."
        }
      }
    }
  },
  "activationEvents": [
    "onView:mcpsearchView"
  ],
  "scripts": {
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.84.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "input": "^1.0.1",
    "node-fetch": "^2.7.0",
    "telegram": "^2.26.22"
  }
}